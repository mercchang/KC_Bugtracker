                                <div class="card-body">
                                    <div class="text-center">
                                        <h4>Project Manager</h4>
                                    </div>
                                    <div class="text-center">
                                        <img src="~/Avatars/default_user.png" class="rounded-circle img-fluid" width="100" />
                                    </div>
                                    <div class="text-center">
                                        asdfasdf
                                    </div>
                                </div>
                            </button>
                        }
                    </div>
                    <div class="col-md-3">
