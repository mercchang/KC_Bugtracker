@model KC_Bugtracker.Models.TicketHistory

@{
    ViewBag.Title = "Delete";
}


<div class="card">
    <div class="card-body">
        <div>
            <h4>Ticket History - Are you sure you want to delete this?</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Submitter
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ticket.Submitter.FullName)
                </dd>

                <dt>
                    Assigned Developer
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Property)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Property)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.OldValue)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OldValue)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NewValue)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NewValue)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Changed)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Changed)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>


