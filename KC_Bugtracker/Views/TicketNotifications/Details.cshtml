@model KC_Bugtracker.Models.TicketNotification

@{
    ViewBag.Title = "Notification Details";
}

<div class="card">
    <div class="card-body">
        <h2>Details</h2>

        <div>
            <h4>Notification Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Recipient.FirstName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Recipient.FirstName)
                </dd>

                <dt>
                    Ticket #
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TicketId)
                </dd>

                <dt>
                    Message
                </dt>

                <dd>
                    @Html.Raw(Model.NotificationBody)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsRead)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsRead)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>
