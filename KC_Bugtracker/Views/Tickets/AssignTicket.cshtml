@model KC_Bugtracker.Models.Ticket
@{
    ViewBag.Title = "AssignTicket";
}

<div class="card shadow">
    <div class="card-header">
        <h3>Ticket</h3>   
    </div>
    <div class="card-body">
        @using (Html.BeginForm("AssignTicket", "Tickets", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)  @*Brings in ticket ID but keeps it hidden*@

                <div class="form-group">
                    @Html.LabelFor(model => model.DeveloperId, "Assign Developer", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DeveloperId", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DeveloperId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-1">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                        <div class="col">
                            @Html.ActionLink("Back to Ticket List", "Index", null, new { @class="btn btn-info" })
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

